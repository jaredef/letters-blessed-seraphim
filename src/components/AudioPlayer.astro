---
interface Props {
    src: string;
    title?: string;
}

const { src, title } = Astro.props;
---

<div class="audio-player">
    {title && <p class="title">{title}</p>}
    <audio controls>
        <source src={src} type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>
    <p class="audio-description">Generated audio, <a href='/audio-book'>learn more</a>.</p>
</div>

<style>
    .audio-player {
        padding: 1.5rem;
        border-radius: 0.25rem;
        border-top: 2px solid var(--sl-color-accent);
        background-color: var(--sl-color-gray-6);
        margin: 2rem 0;
    }

    .title {
        font-family: 'Sina Nova', serif;
        font-size: 1.2rem;
        margin-top: 0;
        margin-bottom: 1rem;
        color: var(--sl-color-white);
    }

    audio {
        width: 100%;
        height: 40px;
    }

    /* Light mode styles */
    :global([data-theme='light']) .audio-player {
        background-color: var(--sl-color-gray-1);
    }

    :global([data-theme='light']) .title {
        color: var(--sl-color-black);
    }
</style> 